
{% comment %}
  target_link.html
  Usage:
    - href: A numeric value matching 'order' variable in a linked tutorial or a direct URL.
    - text: The text for the link.
    - section: (Optional) A subsection on the page to link to, preceded by '#'.
{% endcomment %}


{% if include.href contains 'http' %}
  {% assign href = include.href %}
{% else %}
  {% assign content = site['collection-base'] | sort: 'order' %}
  {% for item in content %}
    {% if item.order == include.href %}
      {% assign href = item.url %}
      {% break %}
    {% endif %}
  {% endfor %}
{% endif %}

{% if include.section %}
  {% assign href = href | append: include.section %}
{% endif %}


<p class="wrapper"> <a href="{{ href }}" target="_blank" class="target-link">{{ include.text }}</a></p>
